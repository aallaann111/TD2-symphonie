{% extends 'base.html.twig' %}

{% block page_title %}Page de {{ utilisateur.login }}{% endblock %}

{% block page_content %}
    <main>
        <div class="center">
            <p id="titre-page-perso">Page de {{ utilisateur.login }}</p>
        </div>
        <div id="feed">
            <!-- Liste des publications de l'utilisateur -->
            {% for publication in utilisateur.publications %}
                {{ include('publication/publication.html.twig', { 'publication': publication }) }}
            {% endfor %}
        </div>
    </main>
{% endblock %}
